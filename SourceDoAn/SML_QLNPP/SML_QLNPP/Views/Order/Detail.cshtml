@model DataModel.DonDatHang
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/detail.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/datatables.min.css" rel="stylesheet" type="text/css" media="all" />
}

@section scripts{
    <script type="text/javascript" src="~/Scripts/Order/datatables.min.js"></script>
    <script>
        var table = $('#order-list').DataTable();
    </script>

}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_SidebarAdmin.cshtml")
        <div class="col-sm-10 col-md-10">
            <div class="well">
                <h3>Thông tin đơn hàng số: @Model.ID_DonHang</h3>
                <div class="panel-group">
                    <div class="panel panel-info">
                        <div class="panel-heading">Thông tin nhà phân phối</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-2 form-group">
                                    <label>Mã nhà phân phối: </label>
                                    <input type="text" value="@Model.ID_NPP" disabled/>
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Tên nhà phân phối: </label>
                                    <input type="text" value="@Model.NhaPhanPhoi.TenNPP" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Số điện thoại: </label>
                                    <input type="text" value="@Model.NhaPhanPhoi.SoDT" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Địa chỉ: </label>
                                    <input type="text" value="@Model.NhaPhanPhoi.DiaChi" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Trạng thái: </label>
                                    <input type="text" value="@(Model.NhaPhanPhoi.TrangThai==false? "Chưa kích hoạt":"Kích hoạt")" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Công nợ: </label>
                                    <input type="text" value="@Model.NhaPhanPhoi.CongNo" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Username: </label>
                                    <input type="text" value="@Model.NhaPhanPhoi.UserName" disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-info">
                        <div class="panel-heading">Thông tin đơn hàng</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-2 form-group">
                                    <label>Mã đơn đặt hàng: </label>
                                    <input type="text" value="@Model.ID_DonHang" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Tổng tiền: </label>
                                    <input type="text" value="@Model.TongTien" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Hình thức giao hàng: </label>
                                    <input type="text" value="@(Model.HinhThucGiaoHang == false ? "Tự túc" : "Vitamil giao hàng")" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Hình thức thanh toán: </label>
                                    <input type="text" value="@(Model.HinhThucThanhToan == false ? "Tiền mặt" : "Qua thẻ")" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Ngày giao dự kiến: </label>
                                    <input type="text" value="@Model.NgayGiaoDuKien" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Tình trạng: </label>
                                    <input type="text" value="@(Model.TinhTrang == 0 ? "Chưa duyệt" : Model.TinhTrang == 1 ? "Đã duyệt" : Model.TinhTrang == 2 ? "Không duyệt" : "Đã giao")" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Ngày lập: </label>
                                    <input type="text" value="@Model.NgayLap" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Mô tả đơn hàng: </label>
                                    <textarea disable cols="100" rows="1">@Model.MoTa</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-info">
                        <div class="panel-heading">Thông tin người liên hệ</div>
                        <div class="panel-body">
                            <div class="col-md-2 form-group">
                                <label>Tên người liên hệ: </label>
                                <input type="text" value="@Model.NguoiLienHeGiaoHang.HoTen" disabled />
                            </div>
                            <div class="col-md-2 form-group">
                                <label>Số điện thoại: </label>
                                <input type="text" value="@Model.NguoiLienHeGiaoHang.SDT" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mgt">
                    <div class="col-md-12">
                        <h2>Danh sách sản phẩm đặt hàng</h2>
                        <table id="order-list" class="cell-border" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>ID SP</th>
                                    <th>Tên SP</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID SP</th>
                                    <th>Tên SP</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </tfoot>
                            <tbody id="result">
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

