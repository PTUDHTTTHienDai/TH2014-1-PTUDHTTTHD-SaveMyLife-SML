<div class="panel-group">
    <div class="panel panel-info">
        <div class="panel-heading">Thông tin nhà phân phối</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2 form-group">
                    <label>Mã nhà phân phối: </label>
                    <input type="text" value="@Model.idDistributor" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Tên nhà phân phối: </label>
                    <input type="text" value="@Model.Distributor.name" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Số điện thoại: </label>
                    <input type="text" value="@Model.Distributor.phone" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Địa chỉ: </label>
                    <input type="text" value="@Model.Distributor.address" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Trạng thái: </label>
                    <input type="text" value="@(Model.Distributor.status==false? "Chưa kích hoạt":"Kích hoạt")" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Công nợ: </label>
                    <input type="text" value="@Model.Distributor.phone" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Username: </label>
                    <input type="text" value="@Model.Distributor.UserName" disabled />
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Thông tin đơn hàng</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2 form-group">
                    <label>Mã đơn đặt hàng: </label>
                    <input type="text" value="@Model.idOrder" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Tổng tiền: </label>
                    <input type="text" value="@Model.Total" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Hình thức giao hàng: </label>
                    <input type="text" value="@(Model.DeliveryType == false ? "Tự túc" : "Vitamil giao hàng")" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Hình thức thanh toán: </label>
                    <input type="text" value="@(Model.PaymentType == false ? "Tiền mặt" : "Qua thẻ")" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Ngày giao dự kiến: </label>
                    <input type="text" value="@Model.EstimateDateOfDelivery" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Tình trạng: </label>
                    <input type="text" value="@(Model.Statuses == 0 ? "Chưa duyệt" : Model.Statuses == 1 ? "Đã duyệt" : Model.Statuses == 2 ? "Không duyệt" : "Đã giao")" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Ngày lập: </label>
                    <input type="text" value="@Model.CreatedDate" disabled />
                </div>
                <div class="col-md-2 form-group">
                    <label>Mô tả đơn hàng: </label>
                    <textarea disable cols="100" rows="1">@Model.Descriptions</textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Thông tin người liên hệ</div>
        <div class="panel-body">
            <div class="col-md-2 form-group">
                <label>Tên người liên hệ: </label>
                <input type="text" value="@Model.Consignee.Name" disabled />
            </div>
            <div class="col-md-2 form-group">
                <label>Số điện thoại: </label>
                <input type="text" value="@Model.Consignee.PhoneNumber" disabled />
            </div>
        </div>
    </div>
</div>
<div class="row mgt">
    <div class="col-md-12">
        <h2>Danh sách sản phẩm đặt hàng</h2>
        <table id="order-list" class="cell-border" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>ID SP</th>
                    <th>Tên SP</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID SP</th>
                    <th>Tên SP</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.idProduct</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Product.Price</td>
                        <td>@item.quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>