<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Child | Vitamilk | Nhà phân phối sữa hàng đầu Việt Nam | Dashboard</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/AdminLTE/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/AdminLTE/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/AdminLTE/ionicons.min.css">
    <!-- jvectormap -->
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Content/AdminLTE/skin-blue.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    @RenderSection("css", required: false)


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @Html.Partial("~/Views/Shared/_AHeader.cshtml");
        @Html.Partial("~/Views/Shared/_ANav.cshtml");
        <!-- Left side column. contains the logo and sidebar -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Trang quản trị nhà phân phối sữa Vitamilk
                    <small>Version 0.0.1</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> @ViewBag.Parent</a></li>
                    <li class="active">@ViewBag.Child</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">

                @RenderBody()
            </section>
                <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 0.0.1
            </div>
            <strong>Copyright &copy; 2017 <a href="https://www.facebook.com/groups/1440423925993573/">Save My Life</a>.</strong> All rights
            reserved.
        </footer>
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
        


        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="~/scripts/AdminLTE/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/scripts/AdminLTE/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/scripts/AdminLTE/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/scripts/AdminLTE/adminlte.min.js"></script>




    @RenderSection("scripts", required: false)


    <div id="loading">
        <div class="overlay"></div>
        <div class="loading-ctnr">
            <p>Đang xử lý... Vui lòng chờ.</p>
        </div>
    </div>

</body>
</html>


