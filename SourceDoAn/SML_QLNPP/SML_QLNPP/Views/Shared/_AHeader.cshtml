@using DataModel;
@{ 
    var admin = Session["admin"] as Account;
}
<header class="main-header">
    <!-- Logo -->
    <a href="@Url.Action("Index", "Admin")" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini">S<b>ML</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">SaveMy<b>LIFE</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/AdminLTE/images/user2-160x160.jpg" class="user-image" alt="User Image">
                        <span class="hidden-xs">@admin.UserName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/Content/AdminLTE/images/user2-160x160.jpg" class="img-circle" alt="User Image">
                            <p>
                                @admin.UserName
                                <small>@admin.dateCreate</small>
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-right">
                                <a href="/Account/Logout" class="btn btn-danger btn-flat">Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
