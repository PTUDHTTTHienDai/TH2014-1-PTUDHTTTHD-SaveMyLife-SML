@model SML_QLNPP.Models.DistributorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/jquery-ui.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/datatables.min.css" rel="stylesheet" type="text/css" media="all" />
}

@section scripts{
    <script type="text/javascript" src="~/Scripts/Order/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Order/datatables.min.js"></script>
}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_SidebarAdmin.cshtml")
        <div class="col-sm-10 col-md-10">
            <div class="well">
                <div class="find">
                    @using (Html.BeginForm())
                    {
                        <label>Tìm kiếm</label>
                        @Html.EditorFor(model => model.id);<span class="glyphicon glyphicon-search"></span>
                        <!--<a> href= <img src="~/Content/Home/images/btn_search.png" /></a>-->
                    }
                </div>
                <div class="row mgt">
                    <div class="col-md-12">
                        <h2>Danh sách nhà phân phối</h2>
                        <br />
                        <table id="dis-list" class="cell-border" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Mã nhà phân phối</th>
                                    <th>Tên công ty</th>
                                    <th>Địa chỉ</th>
                                    <th>Khu vực</th>
                                    <th>Độc quyền</th>
                                    <th>Số điện thoại</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="result">
                                @if (Model.listDis.Count != 0)
                                {
                                    foreach (var item in Model.listDis)
                                    {
                                        <tr class="dis">
                                            <td>@item.Dis.idDistributor</td>
                                            <td>@item.Dis.name</td>
                                            <td>@item.Dis.address</td>
                                            <td>@item.Area</td>
                                            @if (item.Dis_Type == true)
                                            {
                                                <td> <input type="checkbox" name="dis_Type" value=1 checked disabled></td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>@item.Dis.phone</td>
                                            <td><a href="../DetailedDistributor">
                                                <input type="button" value="Chi tiết"/></a></td>
                                        </tr>
                                    }
                                }
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
