@model DataModel.Promotion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/detail.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/datatables.min.css" rel="stylesheet" type="text/css" media="all" />
}

@section scripts{
    <script type="text/javascript" src="~/Scripts/Order/datatables.min.js"></script>
    <script>
        var table = $('#list').DataTable();
        var table = $('#list2').DataTable();
    </script>

}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_SidebarAdmin.cshtml")
        <div class="col-sm-10 col-md-10">
            <div class="well">
                <div class="panel-group">
                    <div class="panel panel-info">
                        <div class="panel-heading">Thông tin khuyến mãi</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-2 form-group">
                                    <label>Mã khuyến mãi: </label>
                                    <input type="text" value="@Model.idPromotion" disabled/>
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Ngày bắt đầu: </label>
                                    <input type="text" value="@Model.startDate" disabled />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Ngày kết thúc: </label>
                                    <input type="text" value="@Model.endDate" disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mgt">
                    <div class="col-md-12">
                        <h2>Danh sách sản phẩm yêu cầu</h2>
                        <table id="list" class="cell-border" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>ID SP</th>
                                    <th>Tên SP</th>
                                    <th>Số lượng YC</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID SP</th>
                                    <th>Tên SP</th>
                                    <th>Số lượng YC</th>
                                </tr>
                            </tfoot>
                            <tbody>
                               @foreach(var item in Model.PromotionProducts)
                               {
                                   <tr>
                                       <td>@item.idProduct</td>
                                       <td>@item.Product.ProductName</td>
                                       <td>@item.Quantity</td>
                                   </tr>
                               }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row mgt">
                    <div class="col-md-12">
                        <h2>Danh sách sản phẩm tặng</h2>
                        <table id="list2" class="cell-border" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>ID SP</th>
                                    <th>Tên SP</th>
                                    <th>Số lượng tặng</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID SP</th>
                                    <th>Tên SP</th>
                                    <th>Số lượng tặng</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.PromotionGifts)
                                {
                                    <tr>
                                        <td>@item.idProduct</td>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

