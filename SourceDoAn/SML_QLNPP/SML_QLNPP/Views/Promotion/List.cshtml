@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/jquery-ui.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/datatables.min.css" rel="stylesheet" type="text/css" media="all" />
}

@section scripts{
    <script type="text/javascript" src="~/Scripts/Order/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Order/datatables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Promotion/promotion.js"></script>
}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_SidebarAdmin.cshtml")
        <div class="col-sm-10 col-md-10">
            <div class="well">
                <div class="row">
                    <div class="col-md-4">
                        <label>Tìm theo ID</label>
                        <input type="text" class="form-control" placeholder="Nhập ID khuyến mãi" id="idpro">
                    </div>
                    <div class="col-md-2">
                        <label>Ngày bắt đầu (năm/tháng/ngày)</label>
                        <input type="text" class="form-control" id="startDate">
                    </div>
                    <div class="col-md-2">
                        <label>Ngày kết thúc (năm/tháng/ngày)</label>
                        <input type="text" class="form-control" id="endDate">
                    </div>
                    <div class="col-md-2">
                        <br />
                        <button class="btn btn-default" id="search">Tìm kiếm kết quả</button>
                    </div>
                </div>
                <div class="row mgt">
                    <div class="col-md-12">
                        <h2>Danh sách đơn khuyến mãi</h2> 
                        <table id="order-list" class="cell-border" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Thao tác</th>
                                </tr>
                            </tfoot>
                            <tbody id="result">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
