@model SML_QLNPP.Models.ContractViewModel
@{
    ViewBag.Title = "Contract";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/jquery-ui.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/Order/datatables.min.css" rel="stylesheet" type="text/css" media="all" />
}

@section scripts{
    <script type="text/javascript" src="~/Scripts/Order/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Order/datatables.min.js"></script>
    <script>
        $('#dis-list').DataTable({
            "oLanguage": {
                "oPaginate": {
                    "sNext": "Tiếp",
                    "sPrevious": "Trước"
                },
                "sInfo": "Hiển thị _START_ đến _END_ trên _TOTAL_ nhà phân phối",
                "sZeroRecords": "Không tìm thấy nhà phân phối",
                "sInfoEmpty": ""
            },
            "searching": false,
            "bLengthChange": false,
            //"bInfo": false
        });
    </script>
}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Shared/_SidebarAdmin.cshtml")
        <div class="col-sm-10 col-md-10">
            <div class="well">
                <div class="text-right">
                    @using (Html.BeginForm("ContractSeacrh", "Contract", FormMethod.Get))
                    {
                        <label> Tìm kiếm </label>
                        @Html.TextBoxFor(model => model.criterion)
                        <select class="form-control" id="status">
                            <option value="0">Chưa duyệt</option>
                            <option value="1">Đã duyệt</option>
                            <option value="2">Không duyệt</option>
                            <option value="3">Đã giao</option>
                        </select>
                        <button type="submit"><span class="glyphicon glyphicon-search"></span></button>
                    }
                </div>
                <div class="row mgt">
                    <div class="col-md-12">
                        <h2>Danh sách nhà phân phối</h2>
                        <br />
                        @if (check == false)
                        {
                            <strong style="color:red"> Mã nhà phân phối không hợp lệ </strong>
                        }
                        else if (isNull == true)
                        {
                            <strong style="color:blue"> Nhập mã nhà phân phối </strong>
                        }
                        else
                        {
                            <table id="dis-list" class="cell-border" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Mã nhà phân phối</th>
                                        <th>Tên công ty</th>
                                        <th>Địa chỉ</th>
                                        <th>Khu vực</th>
                                        <th>Độc quyền</th>
                                        <th>Số điện thoại</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="result">
                                    @foreach (var item in Model.listDis)
                                    {
                                        <tr class="dis">
                                            <td>@item.Dis.idDistributor</td>
                                            <td>@item.Dis.name</td>
                                            <td>@item.Dis.address</td>
                                            <td>@item.Area</td>
                                            @if (item.Dis_Type == true)
                                            {
                                                <td> <input type="checkbox" name="dis_Type" value=1 checked disabled></td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>@item.Dis.phone</td>
                                            <td>
                                                <a href="../Distributor/DetailedDistributor/@item.Dis.idDistributor">
                                                    <input type="button" value="Chi tiết" />
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


